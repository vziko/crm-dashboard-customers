nav.header-nav
    ul.header-nav__list
        each item in navList
            - let isActive = ''
            if item.isActive
                - isActive = 'header-nav__item_active'
            li.header-nav__item.wow.animate__fadeInLeft
                a.header-nav__link(href="#" class=isActive)
                    svg.header-nav__icon
                        use(xlink:href="img/sprites/sprite.svg#" + item.icon)
                    span=item.title
                    if item.multi
                        svg.header-nav__multi
                            use(xlink:href="img/sprites/sprite.svg#arrow-right")